@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="manage-user">
    <div class="container">
        <div class="dashboard-box">
            <h2 class="dashboard-title">Manage Users</h2>
            <p class="dashboard-subtitle">View, search, and manage all system users.</p>

            <!-- Top Controls -->
            <div class="top-controls">
                <ul class="nav nav-tabs custom-tabs" id="userTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="admin-tab" data-bs-toggle="tab" href="#admin" role="tab">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="analyst-tab" data-bs-toggle="tab" href="#analyst" role="tab">Analyst</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="jobseeker-tab" data-bs-toggle="tab" href="#jobseeker" role="tab">JobSeeker</a>
                    </li>
                </ul>

                <a href="@Url.Action("CreateUser", "Admin")" class="main-button create-btn">+ Create User</a>
            </div>

            <!-- Search -->
            <div class="search-bar">
                <input type="text" class="form-control search-input" placeholder="Search by name or email..." />
            </div>

            <!-- Tab Content -->
            <div class="tab-content" id="userTabsContent">
                <!-- Admin Tab -->
                <div class="tab-pane fade show active" id="admin" role="tabpanel">
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th style="width: 150px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.Admins)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.UserRole</td>
                                    <td>
                                        <span class="status @(user.IsActive ? "active" : "inactive")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <button class="btn-action deactivate" onclick="toggleUser(@user.Id, false, this)">Deactivate</button>
                                        }
                                        else
                                        {
                                            <button class="btn-action activate" onclick="toggleUser(@user.Id, true, this)">Activate</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Analyst Tab -->
                <div class="tab-pane fade" id="analyst" role="tabpanel">
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th style="width: 150px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.Analysts)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.UserRole</td>
                                    <td>
                                        <span class="status @(user.IsActive ? "active" : "inactive")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <button class="btn-action deactivate" onclick="toggleUser(@user.Id, false, this)">Deactivate</button>
                                        }
                                        else
                                        {
                                            <button class="btn-action activate" onclick="toggleUser(@user.Id, true, this)">Activate</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- JobSeeker Tab -->
                <div class="tab-pane fade" id="jobseeker" role="tabpanel">
                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th style="width: 150px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.JobSeekers)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.UserRole</td>
                                    <td>
                                        <span class="status @(user.IsActive ? "active" : "inactive")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <button class="btn-action deactivate" onclick="toggleUser(@user.Id, false, this)">Deactivate</button>
                                        }
                                        else
                                        {
                                            <button class="btn-action activate" onclick="toggleUser(@user.Id, true, this)">Activate</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/assets/css/ManageUser.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/assets/js/ManageUser.js"></script>
}
