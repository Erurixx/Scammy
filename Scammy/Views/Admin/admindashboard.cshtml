@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Banner -->
<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <h2>Admin Page</h2>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            <img src="~/assets/images/admin/admin-panel.png" alt="admin-panel" class="adminpanel-img">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Admin Features Section -->
<div id="admin-features" class="features section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="features-content">
                    <div class="row">

                        <!-- Manage Reports -->
                        <div class="col-lg-4">
                            <div class="features-item first-feature wow fadeInUp" data-wow-duration="1s" data-wow-delay="0s">
                                <div class="first-number number">
                                    <h6>01</h6>
                                </div>
                                <img src="~/assets/images/admin/managereport.png" alt="managereport" class="admin-img">
                                <h4>Manage Articles</h4>
                                <div class="line-dec"></div>
                                <p>Access and review reports submitted by users to ensure platform safety.</p>
                                <a href="@Url.Action("ManageArticle", "Admin")" class="main-button">Go</a>
                            </div>
                        </div>

                        <!-- Manage Users -->
                        <div class="col-lg-4">
                            <div class="features-item second-feature wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.2s">
                                <div class="second-number number">
                                    <h6>02</h6>
                                </div>
                                <img src="~/assets/images/admin/manageuser.png" alt="manageuser" class="admin-img">
                                <h4>Manage Users</h4>
                                <div class="line-dec"></div>
                                <p>View and deactivate users with appropriate permissions.</p>
                                <a href="@Url.Action("ManageUser", "Admin")" class="main-button">Go</a>
                            </div>
                        </div>

                        <!-- Create Account -->
                        <div class="col-lg-4">
                            <div class="features-item last-features-item wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.4s">
                                <div class="third-number number">
                                    <h6>03</h6>
                                </div>
                                <img src="~/assets/images/admin/createuser.png" alt="acreteuser" class="admin-img">
                                <h4>Create Account</h4>
                                <div class="line-dec"></div>
                                <p>Quickly set up new administrator or analyst accounts.</p>
                                <a href="@Url.Action("CreateUser", "Admin")" class="main-button">Go</a>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    #admin-dashboard {
        font-family: 'Times New Roman', serif;
        padding: 90px 0 80px;
        min-height: 100vh;
        background-color: #f5f7fa;
    }

    .dashboard-box {
        background: #fff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.08);
        max-width: 1100px;
        margin: 0 auto 60px;
    }

    .dashboard-title {
        text-align: center;
        font-size: 2.4em;
        margin-bottom: 5px;
        color: #004aad;
        font-weight: bold;
    }

    .dashboard-subtitle {
        text-align: center;
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .service-item {
        background: #fff;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        min-height: 220px;
    }

        .service-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

        .service-item h4 {
            font-size: 1.4em;
            color: #004aad;
            margin-bottom: 15px;
        }

        .service-item p {
            font-size: 1em;
            color: #666;
            margin-bottom: 20px;
        }

    .admin-img {
        width: 100px; /* adjust size */
        height: auto;
        margin: 10px auto; /* centers if needed */
        display: block;
    }

    .adminpanel-img {
        width: 80%;
        height: auto;
        margin-top: -50px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }


    .main-button {
        display: inline-block;
        background-color: #33ccc5;
        font-size: 15px;
        font-weight: 400;
        color: #fff;
        margin-top: 20px;
        text-transform: capitalize;
        padding: 12px 25px;
        border-radius: 23px;
        letter-spacing: 0.25px;
        border-bottom: 2px solid #4771cb !important;
        transition: all .3s;
        outline: none;
        border: none;
    }

        .main-button:hover {
            background-color: #4771cb !important;
            color: #fff !important;
            border-bottom: 2px solid #33ccc5 !important;
        }

</style>

