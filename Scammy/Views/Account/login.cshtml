@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link rel="icon" type="image/png" href="~/assets/images/scammy-logo.png" />
<link rel="stylesheet" href="~/assets/css/login.css" />
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<section id="login">
    <div class="container" id="container">

        <!-- Sign Up Form -->
        <div class="form-container sign-up-container">
            <form asp-action="Register" method="post">
                <h1>Create Account</h1>
                <span>Use your email to register and start reporting scams</span>
                <input type="text" name="fullName" placeholder="Full Name" required
                       pattern="^[a-zA-Z\s]{2,50}$"
                       title="Full Name should be 2-50 characters and only letters" />  

                <input type="email" name="email" placeholder="Email" required />

                <input type="password" name="password" placeholder="Password" required
                       pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                       title="Password must be at least 8 characters, include uppercase, lowercase, and a number" />
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Sign In Form -->
        <div class="form-container sign-in-container">
            <form asp-action="LoginUser" method="post">
                <h1>Sign In</h1>
                <span>Use your account to access scam reports</span>
                <input type="email" name="email" placeholder="Email" required />
                <input type="password" name="password" placeholder="Password" required />
                @* <a href="#">Forgot your password?</a> *@
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Overlay Panels -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>Sign in to report scams and stay informed about latest scam alerts.</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Create an account to start reporting scam jobs and helping others stay safe.</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/assets/js/login.js"></script>

<!-- ✅ SweetAlert Popup Handling -->
<script>
    @if (TempData["Error"] != null)
    {
            <text>
            Swal.fire({
                
                title: 'Error',
                text: '@TempData["Error"]'
            });
            </text>
    }
    @if (TempData["Success"] != null)
    {
            <text>
            Swal.fire({
                
                title: 'Success',
                text: '@TempData["Success"]'
            });
            </text>
    }
</script>

