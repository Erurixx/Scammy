@{
    ViewBag.Title = "Awareness Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="scam-reports">
    <div class="container">
        <div class="role-section">
            <div class="role-header" style="margin-top: 5rem;">
                <h3>Scam Awareness Hub</h3>
                <p style="color: var(--primary); margin-bottom: 1.5rem;">
                    Stay informed with the latest scam trends, safety tips, and industry insights from credible sources
                </p>
            </div>
            <div class="role-grid">
                <div class="role-card">
                    <i class="fas fa-newspaper"></i>
                    <h4>Latest Scam Alerts</h4>
                    <p>Real-time updates on emerging job scam tactics and fraud patterns affecting job seekers</p>
                    <a href="#" class="btn btn-primary">View Scam Alerts</a>
                </div>
                <div class="role-card">
                    <i class="fas fa-graduation-cap"></i>
                    <h4>Safety Guides</h4>
                    <p>Expert-written guides and tips to help you identify and avoid employment fraud</p>
                    <a href="#" class="btn btn-primary">Read Tips</a>
                </div>

                <div class="role-card">
                    <i class="fas fa-edit"></i>
                    <h4>Manage Articles</h4>
                    <p>Create, edit, and manage informative scam awareness posts to educate users</p>
                    <a href="@Url.Action("ManageArticles", "Analyst")" class="btn btn-primary">Go to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</section>