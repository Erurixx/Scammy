@model List<Scammy.Models.Article>

@{
    ViewData["Title"] = "Articles - Scam Awareness Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Hero Banner -->
<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4">
                                    <div class="info-stat">
                                        <h6>Published Articles:</h6>
                                        <h4>320+</h4>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4">
                                    <div class="info-stat">
                                        <h6>Safety Tips:</h6>
                                        <h4>150+</h4>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4">
                                    <div class="info-stat">
                                        <h6>Monthly Readers:</h6>
                                        <h4>12K+</h4>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <h2>Scam Awareness Hub</h2>
                                </div>
                                <div class="col-lg-12">
                                    <div class="main-green-button scroll-to-section">
                                        <a href="#view-articles">Browse Articles</a>
                                        <a href="#safety-tips" class="btn-outline">Read Safety Tips</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            <img src="~/assets/images/scam-awareness-logo.png" alt="scam-awareness-logo">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Hub Features -->
<div id="hub-features" class="features section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="features-content">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="features-item first-feature wow fadeInUp" data-wow-duration="1s" data-wow-delay="0s">
                                <div class="first-number number">
                                    <h6>01</h6>
                                </div>
                                <div class="icon"></div>
                                <h4>View Articles</h4>
                                <div class="line-dec"></div>
                                <p>Browse our comprehensive library of scam awareness articles and industry insights.</p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="features-item second-feature wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.2s">
                                <div class="second-number number">
                                    <h6>02</h6>
                                </div>
                                <div class="icon"></div>
                                <h4>Read Tips</h4>
                                <div class="line-dec"></div>
                                <p>Access quick safety tips and prevention strategies for safe job searching.</p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="features-item first-feature last-features-item wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.4s">
                                <div class="third-number number">
                                    <h6>03</h6>
                                </div>
                                <div class="icon"></div>
                                    <h4>Learn More</h4>
                                <div class="line-dec"></div>
                                    <p>Dive deeper into awareness guides and expand your knowledge about online job scams.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Articles Section -->
<section id="view-articles" class="recent-scams">
    <div class="container">
        <div class="section-header">
            <h2>Latest Articles</h2>
            <p>Stay informed with expert insights and analysis on job scam trends</p>
        </div>
        

        

            <div class="scams-grid" style="margin-bottom: 40px;">
                @foreach (var article in Model.Take(6))
                {
                    // Random read time between 5 and 12 minutes
                    var random = new Random();
                    var readTime = random.Next(5, 13);

                    <div class="scam-card">
                        <div class="scam-header">
                            <span class="severity-badge severity-critical">Featured</span>
                            <span class="date-text">@article.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>

                        <h3 class="scam-title">@article.Title</h3>

                        <div class="scam-meta">
                            <div class="scam-meta-item">
                                <i class="fas fa-user"></i>
                                <span>@article.Author</span>
                            </div>
                            <div class="scam-meta-item">
                                <i class="fas fa-clock"></i>
                                <span>@readTime min read</span>
                            </div>
                            
                        </div>

                        <p class="description-text">@article.Excerpt</p>

                        <div class="warning-flags">
                            @if (!string.IsNullOrEmpty(article.Tags))
                            {
                                foreach (var tag in article.Tags.Split(','))
                                {
                                    <span class="flag">@tag</span>
                                }
                            }
                        </div>

                        
                    </div>
                }
            </div>

            

           

        <div class="text-center">
            <div class="main-green-button">
                    <a asp-controller="Home" asp-action="viewAllArticles">View All Articles</a>
            </div>
        </div>
    
</section>

<!-- Safety Tips Section -->
<section id="safety-tips" class="our-services section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading wow bounceIn" data-wow-duration="1s" data-wow-delay="0.2s">
                    <h6>Safety Tips</h6>
                    <h2>Essential <span>Safety</span> Tips for <em>Job Seekers</em></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.3s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/info-icon.png" alt="info-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Verify Company Information</h4>
                                <p>Always research the company's official website, check business registrations, and verify contact information before applying.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.4s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/money.png" alt="money-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Never Pay Upfront Fees</h4>
                                    <p>Legitimate employers will never ask job applicants to pay money upfront for training programs, work equipment, or background checks.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/personal-info.png" alt="personal-info-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Be Cautious with Personal Info</h4>
                                <p>Only provide sensitive information after confirming the employer's legitimacy and during official interviews.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.6s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/insticnt.png" alt="instinct-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Trust Your Instincts</h4>
                                <p>If an offer seems too good to be true or feels suspicious, take time to research and verify before proceeding.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.7s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/secure.png" alt="secure-communication-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Use Secure Communication</h4>
                                <p>Communicate through official company channels and be wary of personal email addresses or messaging apps.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.8s">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="icon">
                                <img src="~/assets/images/suspicious.png" alt="sus-activity-icon">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="right-content">
                                <h4>Report Suspicious Activity</h4>
                                <p>Help protect others by reporting suspicious job postings and recruitment practices to relevant authorities.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   


