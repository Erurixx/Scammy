<!-- Submit Report Form -->
<section class="form-section">
    <div class="container">
        <div class="section-header">
            <h2>Report a Job Scam</h2>
            <p>Help protect others by sharing details about fraudulent job opportunities you've encountered</p>
        </div>

        <div class="form-container">
            <form>
                <div class="form-row">
                    <div class="form-group">
                        <label for="company-name">Company Name *</label>
                        <input type="text" id="company-name" class="form-control" placeholder="Enter company name" required>
                    </div>
                    <div class="form-group">
                        <label for="job-title">Job Title *</label>
                        <input type="text" id="job-title" class="form-control" placeholder="Enter job title" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="scam-type">Scam Type *</label>
                        <select id="scam-type" class="form-control" required>
                            <option value="">Select scam type</option>
                            <option value="fake-recruiter">Fake Recruiter</option>
                            <option value="identity-theft">Identity Theft</option>
                            <option value="payment-scam">Payment Scam</option>
                            <option value="phishing">Phishing Attempt</option>
                            <option value="fake-company">Fake Company</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="salary-offered">Salary Offered</label>
                        <input type="text" id="salary-offered" class="form-control" placeholder="e.g., $50,000/year">
                    </div>
                </div>

                <div class="form-group">
                    <label for="contact-method">How were you contacted?</label>
                    <select id="contact-method" class="form-control">
                        <option value="">Select method</option>
                        <option value="email">Email</option>
                        <option value="phone">Phone Call</option>
                        <option value="text">Text Message</option>
                        <option value="social-media">Social Media</option>
                        <option value="job-board">Job Board</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="description">Description *</label>
                    <textarea id="description" class="form-control" rows="4" placeholder="Describe the scam in detail. Include any red flags, requests for money, suspicious behavior, etc." required></textarea>
                </div>

                <div class="form-group">
                    <label for="warning-signs">Warning Signs (Check all that apply)</label>
                    <div class="checkbox-grid">
                        <label class="checkbox-item">
                            <input type="checkbox" value="upfront-payment"> Requested upfront payment
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" value="personal-info"> Asked for personal information
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" value="too-good"> Salary too good to be true
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" value="no-interview"> No proper interview process
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" value="poor-grammar"> Poor grammar/spelling
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" value="urgency"> Created false urgency
                        </label>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-danger btn-large">
                        <i class="fas fa-paper-plane"></i> Submit Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

