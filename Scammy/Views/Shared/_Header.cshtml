                        @if (true)
                        {
                            <li class="scroll-to-section dropdown">
                                <a href="#" class="dropdown-toggle" id="awarenessHubDropdown">
                                    Awareness Hub
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Articles", "Home")">Awareness Hub</a></li>
                                    <li><a href="@Url.Action("dashboard", "Analyst")">Analyst Dashboard</a></li>
                                </ul>
                            </li>
                        }
                        

                        <li class="scroll-to-section"><a href="@Url.Action("Analytics", "Home")">Analytics</a></li>
                    

