<header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- Logo -->
                    <a href="@Url.Action("Index", "Home")" class="logo">
                        <h4>Scammy <img src="~/assets/images/logo-icon.png" alt=""></h4>
                    </a>

                    <!-- Menu -->
                    <ul class="nav">
                        <li class="scroll-to-section"><a href="@Url.Action("Index", "Home")" class="active">Home</a></li>
                        <li class="scroll-to-section"><a href="@Url.Action("ScamReports", "Home")">Scam Reports</a></li>

                        <!-- Awareness Hub - Conditional Dropdown -->
                        @if (true)
                        {
                            <li class="scroll-to-section dropdown">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="awarenessHubDropdown">
                                    Awareness Hub
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="awarenessHubDropdown">
                                    <li><a href="@Url.Action("Articles", "Home")">Awareness Hub</a></li>
                                    <li><a href="@Url.Action("dashboard", "Analyst")">Analyst Dashboard</a></li>
                                </ul>
                            </li>
                        }

                        <li class="scroll-to-section"><a href="@Url.Action("Analytics", "Home")">Analytics</a></li>

                        <!-- Admin - Conditional Dropdown -->
                        <li class="scroll-to-section dropdown">
                            <a class="dropdown-toggle" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Admin")">Admin Dashboard</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ManageArticle", "Admin")">Manage Articles</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ManageUser", "Admin")">Manage User</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CreateUser", "Admin")">Create User</a></li>
                            </ul>
                        </li>


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="scroll-to-section">
                                <a href="#" class="user-greeting"><i class="fas fa-user"></i> Hi, @User.Identity.Name</a>

                            </li>
                            <li class="scroll-to-section">
                                <a href="@Url.Action("Logout", "Account")">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="scroll-to-section">
                                <a href="@Url.Action("Login", "Account")">Login</a>
                            </li>
                        }



                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="@Url.Action("Dashboard", "Admin")">Admin</a></li>
                        }
                        @if (User.IsInRole("Analyst"))
                        {
                            <li><a href="@Url.Action("Dashboard", "Analyst")">Analyst</a></li>
                        }
                    </ul>

                    <!-- Mobile Menu Trigger -->
                    <a class="menu-trigger">
                        <span>Menu</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>


    <style>
        /* Override dropdown z-index directly in header */
        .header-area .main-nav .nav li.dropdown .dropdown-menu,
        .header-area .main-nav .nav li.submenu ul {
            z-index: 99999 !important;
        }

        .header-area .main-nav .nav li.dropdown,
        .header-area .main-nav .nav li.submenu {
            z-index: 99999 !important;
        }

        .header-area {
            z-index: 99999 !important;
        }

        .background-header {
            z-index: 99999 !important;
        }
    </style>

    <script>
        // Simple dropdown fix - add at bottom of header.cshtml
        document.addEventListener('DOMContentLoaded', function() {
            // Force z-index override for all dropdown elements
            const dropdowns = document.querySelectorAll('.dropdown-menu, .submenu ul');
            dropdowns.forEach(function(dropdown) {
                dropdown.style.zIndex = '99999';
                dropdown.style.position = 'absolute';
            });

            // Force z-index for dropdown containers
            const dropdownContainers = document.querySelectorAll('.dropdown, .submenu');
            dropdownContainers.forEach(function(container) {
                container.style.zIndex = '99999';
                container.style.position = 'relative';
            });

            // Force z-index for header
            const header = document.querySelector('.header-area');
            if (header) {
                header.style.zIndex = '99999';
            }

            const backgroundHeader = document.querySelector('.background-header');
            if (backgroundHeader) {
                backgroundHeader.style.zIndex = '99999';
            }
        });
    </script>

</header>

@if (TempData["SuccessMessage"] != null)
{
    <div id="toastMessage" class="toast">
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="toast-close" onclick="this.parentElement.style.display='none'">&times;</button>
    </div>
}



